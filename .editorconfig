# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
tab_width = 2

# YAML files (Kubernetes, GitHub Actions, etc.)
[*.{yml,yaml}]
indent_size = 2

# JSON and config files
[*.{json,jsonc}]
indent_size = 2

# Markdown (avoid trimming trailing spaces for intentional line breaks)
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfiles
[Dockerfile*]
indent_size = 2

# Terraform and HCL files
[*.{tf,hcl}]
indent_size = 2

# Makefiles (tabs are required)
[Makefile]
indent_style = tab
